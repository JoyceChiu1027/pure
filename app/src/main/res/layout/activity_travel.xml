<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    tools:context=".TravelActivity" >

    <include layout="@layout/top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/travel_tx1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="推荐"
            android:textColor="@color/module_title_gray"
            android:textSize="@dimen/space_18" />

        <TextView
            android:id="@+id/travel_tx2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="旅行社"
            android:textColor="@color/module_title_gray"
            android:textSize="@dimen/space_18"  />

        <TextView
            android:id="@+id/travel_tx3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="拼团"
            android:textColor="@color/module_title_gray"
            android:textSize="@dimen/space_18"  />

        <TextView
            android:id="@+id/travel_tx4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="景点"
            android:textColor="@color/module_title_gray"
            android:textSize="@dimen/space_18" />

 <!--      <TextView
            android:id="@+id/travel_tx5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="游记"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/space_18" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/travel_t1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue" />

        <TextView
            android:id="@+id/travel_t2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/back" />

        <TextView
            android:id="@+id/travel_t3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/back" />

        <TextView
            android:id="@+id/travel_t4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/back" />

    <!--      <TextView
            android:id="@+id/travel_t5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/back" /> -->
    </LinearLayout>
    
