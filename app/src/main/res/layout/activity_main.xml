<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChengdeMainActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/space_20" 
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/blue">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:src="@drawable/title_text"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_con"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <RelativeLayout
            android:id="@+id/re_zhy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="jianTing" >

            <ImageView
                android:id="@+id/rb_zhuy"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/main_home_icon_selected" />

            <TextView
                android:id="@+id/text_zhuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rb_zhuy"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="@string/main_zhy"
                android:textColor="@color/blue"
                android:textSize="@dimen/tab_title_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_yyt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="jianTing" >

            <ImageView
                android:id="@+id/rb_yyt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/main_business_icon_normal" />

            <TextView
                android:id="@+id/text_yyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rb_yyt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="@string/main_yyt"
                android:textColor="@color/black"
                android:textSize="@dimen/tab_title_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_se"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="jianTing" >

            <ImageView
                android:id="@+id/rb_se"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/main_service_icon_normal" />

            <TextView
                android:id="@+id/text_se"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rb_se"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="@string/main_se"
                android:textColor="@color/black"
                android:textSize="@dimen/tab_title_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="jianTing">

            <ImageView
                android:id="@+id/rb_me"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/main_me_icon_normal" />

            <TextView
                android:id="@+id/text_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rb_me"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="@string/main_me"
                android:textColor="@color/black"
                android:textSize="@dimen/tab_title_text_size" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>