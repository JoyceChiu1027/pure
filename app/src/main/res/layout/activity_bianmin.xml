<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    tools:context=".BianminActivity" >

    <include layout="@layout/top" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/bian_tx1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="保洁"
            android:clickable="true"
            android:textColor="@color/module_title_gray"
            android:textSize="@dimen/space_18" 
            android:gravity="center_horizontal"/>
        
        <TextView 
            android:id="@+id/bian_tx2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:clickable="true"
            android:text="搬家"
            android:textColor="@color/module_title_gray"
            android:textSize="@dimen/space_18" 
            android:gravity="center_horizontal"/>
        
        <TextView 
            android:id="@+id/bian_tx3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="维修"
            android:clickable="true"
            android:textColor="@color/module_title_gray"
            android:textSize="@dimen/space_18" 
            android:gravity="center_horizontal"/>
        
        <TextView 
            android:id="@+id/bian_tx4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:clickable="true"
            android:text="婚庆"
            android:textColor="@color/module_title_gray"
            android:textSize="@dimen/space_18" 
            android:gravity="center_horizontal"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/bian_t1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/blue"/>
        <TextView 
            android:id="@+id/bian_t2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/back"/>
        <TextView 
            android:id="@+id/bian_t3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/back"/>
        <TextView 
            android:id="@+id/bian_t4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/back"/>
    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/bian_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>
    
</LinearLayout>