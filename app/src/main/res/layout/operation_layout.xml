<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/operation_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:baselineAligned="true"
    android:gravity="center_vertical|right"
    android:orientation="horizontal"
    android:padding="10dp" >

        <TextView
            android:id="@+id/comment_bg"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="7"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/comment_border_bg"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:text="写点啥..." />

        <ImageButton
            android:id="@+id/comments_btn"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/btn_comment" />

        <ImageButton
            android:id="@+id/like_btn"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            
            android:scaleType="fitXY"
            android:background="@drawable/btn_like"/>

        <ImageButton
            android:id="@+id/collect_btn"
            android:layout_width="0dp"
            android:layout_height="25dp"
             android:layout_weight="1"
             android:layout_marginRight="10dp"        
            android:scaleType="fitXY"
            android:background="@drawable/btn_collect" />

        <ImageButton
            android:id="@+id/share_btn"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/btn_share" />
