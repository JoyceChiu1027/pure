<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ZhiNanActivity" >

	<include layout="@layout/top"/>    

	<LinearLayout 
	    android:layout_marginTop="1dp"
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:background="@color/white"
	    android:orientation="horizontal">
	    
	    <TextView
	        android:id="@+id/guzhang_normal"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:clickable="true"
	        android:text="常规报修"
	        android:layout_gravity="center_vertical"
	        android:gravity="center"
	        android:textSize="@dimen/space_14"
	        android:textColor="@color/absolute"/>
	    
	    <TextView 
	        android:layout_width="1dp"
	        android:layout_height="26dp"
	        android:background="@color/black"
	        android:layout_gravity="center_vertical"/>
	    
	    <TextView
	        android:id="@+id/guzhang_fast"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:clickable="true"
	        android:text="快速报修"
	        android:layout_gravity="center_vertical"
	        android:gravity="center"
	        android:textSize="@dimen/space_14"
	        android:textColor="@color/black"/>
	    
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/grey"
	    android:orientation="horizontal">
	    
	    <TextView
	        android:id="@+id/guzhang_ti_normal"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@color/absolute"/>
	    
	    
	    <TextView
	        android:id="@+id/guzhang_ti_fast"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@color/grey"/>
	    
	</LinearLayout>
	
	<android.support.v4.view.ViewPager
	    android:id="@+id/guzhang_viewpager"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"/>
	
</LinearLayout>
