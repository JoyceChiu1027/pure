<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical">

    <include layout="@layout/top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/photograph_tx1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="推荐"
            android:textColor="@color/module_title_gray"
            android:textSize="@dimen/space_18"  />

        <TextView
            android:id="@+id/photograph_tx2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="论坛"
            android:textColor="@color/module_title_gray"
            android:textSize="@dimen/space_18" />

        <TextView
            android:id="@+id/photograph_tx3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="赏析"
            android:textColor="@color/module_title_gray"
            android:textSize="@dimen/space_18" />

        <TextView
            android:id="@+id/photograph_tx4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="影楼"
            android:textColor="@color/module_title_gray"
            android:textSize="@dimen/space_18" />

        <TextView
            android:id="@+id/photograph_tx5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="摄友"
            android:textColor="@color/module_title_gray"
            android:textSize="@dimen/space_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/photograph_t1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue" />

        <TextView
            android:id="@+id/photograph_t2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/back" />

        <TextView
            android:id="@+id/photograph_t3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/back" />

        <TextView
            android:id="@+id/photograph_t4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/back" />


        <TextView
            android:id="@+id/photograph_t5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/back" />
    </LinearLayout>
   <!-- <LinearLayout 
        android:id="@+id/ad_con_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/> -->

    <android.support.v4.view.ViewPager
        android:id="@+id/photograph_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>