<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    tools:context="com.bupt.chengde.TravelViewSpotActivity" >

    <include layout="@layout/top" />

    <HorizontalScrollView
        android:id="@+id/con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/view_spot_rGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/view_spot_rButton1"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="承德市"
                    android:textColor="@color/module_title_gray"
                    android:textSize="@dimen/space_18" />

                <RadioButton
                    android:id="@+id/view_spot_rButton2"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="承德县"
                    android:textColor="@color/module_title_gray"
                    android:textSize="@dimen/space_18" />

                <RadioButton
                    android:id="@+id/view_spot_rButton3"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="宽城"
                    android:textColor="@color/module_title_gray"
                    android:textSize="@dimen/space_18" />

                <RadioButton
                    android:id="@+id/view_spot_rButton4"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="兴隆"
                    android:textColor="@color/module_title_gray"
                    android:textSize="@dimen/space_18" />

                <RadioButton
                    android:id="@+id/view_spot_rButton5"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="平泉"
                    android:textColor="@color/module_title_gray"
                    android:textSize="@dimen/space_18" />

                <RadioButton
                    android:id="@+id/view_spot_rButton6"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="滦平"
                    android:textColor="@color/module_title_gray"
                    android:textSize="@dimen/space_18" />

                <RadioButton
                    android:id="@+id/view_spot_rButton7"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="隆化"
                    android:textColor="@color/module_title_gray"
                    android:textSize="@dimen/space_18" />

                <RadioButton
                    android:id="@+id/view_spot_rButton8"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="丰宁"
                    android:textColor="@color/module_title_gray"
                    android:textSize="@dimen/space_18" />

                <RadioButton
                    android:id="@+id/view_spot_rButton9"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="围场"
                    android:textColor="@color/module_title_gray"
                    android:textSize="@dimen/space_18" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/travel_text_1"
                    android:layout_width="75dp"
                    android:layout_height="2dp"
                    android:background="@color/blue" />

                <TextView
                    android:id="@+id/travel_text_2"
                    android:layout_width="75dp"
                    android:layout_height="2dp"
                    android:background="@color/transparent" />

                <TextView
                    android:id="@+id/travel_text_3"
                    android:layout_width="75dp"
                    android:layout_height="2dp"
                    android:background="@color/transparent" />

                <TextView
                    android:id="@+id/travel_text_4"
                    android:layout_width="75dp"
                    android:layout_height="2dp"
                    android:background="@color/transparent" />

                <TextView
                    android:id="@+id/travel_text_5"
                    android:layout_width="75dp"
                    android:layout_height="2dp"
                    android:background="@color/transparent" />

                <TextView
                    android:id="@+id/travel_text_6"
                    android:layout_width="75dp"
                    android:layout_height="2dp"
                    android:background="@color/transparent" />

                <TextView
                    android:id="@+id/travel_text_7"
                    android:layout_width="75dp"
                    android:layout_height="2dp"
                    android:background="@color/transparent" />

                <TextView
                    android:id="@+id/travel_text_8"
                    android:layout_width="75dp"
                    android:layout_height="2dp"
                    android:background="@color/transparent" />

                <TextView
                    android:id="@+id/travel_text_9"
                    android:layout_width="75dp"
                    android:layout_height="2dp"
                    android:background="@color/transparent" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_spot_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>