<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back" >

    <EditText
        android:id="@+id/bao_fast_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/me_btn"
        android:hint="@string/bao_name"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/space_14" />

    <EditText
        android:id="@+id/bao_fast_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/me_btn"
        android:hint="@string/bao_phone"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/space_14" />

    <EditText
        android:id="@+id/bao_fast_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/me_btn"
        android:hint="@string/bao_cardid"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/space_14"
        android:visibility="gone" />

    <EditText
        android:id="@+id/bao_fast_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/me_btn"
        android:hint="@string/bao_address"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/space_14" />

    <EditText
        android:id="@+id/bao_fast_ca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/me_btn"
        android:hint="@string/bao_ca"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/space_14" />

    <Spinner
        android:id="@+id/bao_fast_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/me_btn"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/space_14" />

    <EditText
        android:id="@+id/bao_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/me_btn"
        android:inputType="textMultiLine"
        android:minHeight="25dp"
        android:layout_marginTop="1dp"
        android:padding="10dp"
        android:minLines="1" 
        android:hint="请填写故障现象"
        android:gravity="top"
        android:textSize="@dimen/space_14"/>

    <Button
        android:id="@+id/bao_fast_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/sub_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/top_sunmit"
        android:textColor="@color/white"
        android:textSize="@dimen/space_14" />

</LinearLayout>